pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/bhavanachoudhari24/step-by-step-project.git'
        APP_DIR = '/usr/share/nginx/html'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: "${GIT_REPO}"
            }
        }

        stage('Deploy to EC2 Webserver') {
            steps {
                sh """
                sudo rm -rf ${APP_DIR}/*
                sudo cp -r * ${APP_DIR}/
                sudo systemctl restart nginx
                """
            }
        }
    }

    post {
        success {
            echo "Deployment Successful!"
        }
        failure {
            echo "Deployment Failed!"
        }
    }

}
